<div class="container-fluid p-0 m-0">
  <img src="assets/img/burger-picker2.gif" class="burger-headline" />
</div>
<div class="container">
  <div class="row">

    {{#each burgers}}
    {{#if devoured}}
    <div class="col-md-6">
      <div class="card" style="width: 18rem;">
        <img src="assets/img/devoured.gif" class="card-img-top" />
        <div class="card-body">
          <p class="card-text">{{burger_name}}</p>
          
        </div>
      </div>
    </div>
    
{{/if}}
 {{#unless devoured}}
    <div class="col-md-6">
      <div class="col-md-6">
        <div class="card" style="width: 18rem;">
          <img src="assets/img/burger-img1.gif" class="card-img-top" />
          <div class="card-body">
            <p class="card-text">{{burger_name}}</p>
            {{> burger-eats/burger-block }}
          </div>
        </div>
      </div>
    </div>
    {{/unless}}
     {{/each}}
  </div>
</div>
